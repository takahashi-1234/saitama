<% if post.favorite_by(current_user) %>
  <%= link_to post_favorites_path(post.id),remote:true,method: :delete do %>
    <i class="fas fa-heart"></i><%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post.id),remote:true,method: :post do %>
    <i class="far fa-heart"></i><%= post.favorites.count %>
  <% end %>
<% end %>